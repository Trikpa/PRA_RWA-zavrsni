@model Site_za_evidenciju_radnih_sati.Models.LoginViewModel

@{
	Layout = null;
	ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/assets/css/Login-Form-Dark.css" rel="stylesheet" />
	<link href="~/Content/login.css" rel="stylesheet" />

	<title>Prijava</title>
</head>
<body class="dark-background vh-100">
	@using ( Html.BeginForm(actionName: "Login", controllerName: "Login", method: FormMethod.Post, htmlAttributes: new { @class = "w-100 h-100  d-flex justify-content-center align-items-center" }) )
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)
		<div class="container login-form-dark-rounded-shadow w-50 h-auto dropShadow">
			<div class="row">
				<div class="col d-flex flex-column align-items-center">
					<div>
						<h1 class="mt-4 mb-2 display-6" id="welcome-text">Dobrodošli natrag!</h1>
					</div>
					<div>
						<h6 class="mt-1 mb-2 display-6 text-red font-weight-light">Site za evidenciju radnih sati</h6>
					</div>
					@if ( ViewData["Message"] != null )
					{
						<div class="text-danger">
							@ViewData["Message"]
						</div>
					}
					<div>
						@Html.Label(expression: "", htmlAttributes: new { @class = "text-danger", @visible = "false" })
					</div>
					<div class="form-group w-50 mt-2 mb-3 d-flex flex-row">
						@Html.TextBoxFor(user => user.Email, new { @class = "inputField span6", @placeholder = "Email", @type = "email", @autofocus = "true", @autocomplete = "off" })
					</div>
					<div class="form-group w-50 mt-3 mb-4 d-flex flex-row">
						@Html.TextBoxFor(user => user.Password, new { @class = "inputField span6", @type = "password", @placeholder = "Password", @autofocus = "false", @autocomplete = "off" })
					</div>
					<div class="form-check w-50 mb-3">
						@Html.CheckBox(name: "cbRememberMe", isChecked: false, htmlAttributes: new { @class = "form-check-input text-white" })
						@Html.Label(expression: "Zapamti me", htmlAttributes: new { @class = "form-check-label text-white", @for = "cbRememberMe" })
					</div>
					<div class="form-group w-50 mb-3">
						<button type="submit" name="btnLogin" value="Login" class="btn-block loginButton">Prijava</button>
					</div>
				</div>
			</div>
		</div>
	}
</body>
</html>
